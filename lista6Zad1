#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <fcntl.h>
#include <sys/mman.h>
#include <sys/stat.h>
#include <sys/types.h>

int main()
{
    char fileName[100];
    int fd, fd_memory, size;
    char *addres = NULL;
    while (1)
    {
        printf("Podaj nazwe pliku: ");
        scanf("%s", fileName);
        fd = open(fileName, O_RDWR);
        
        fd_memory = open("memory", O_CREAT | O_RDWR);

        size = lseek(fd, 0, SEEK_END);
        ftruncate(fd_memory, size);
        address = (char *)mmap(NULL, size, PROT_WRITE | PROT_READ, MAP_SHARED, fd_memory, 0);
        read(fd, address, size);
        msync(address, size, MS_ASYNC);
        close(fd);
        close(fd_memory);
    }
    return 0;
}
